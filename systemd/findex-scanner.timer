[Unit]
Description=Findex Scanner Timer - Periodic File Index Updates
Documentation=https://github.com/ogefest/findex

[Timer]
# Run 15 minutes after boot
OnBootSec=15min

# Then run daily at 3:00 AM
OnCalendar=*-*-* 03:00:00

# Randomize start time by up to 30 minutes to avoid load spikes
RandomizedDelaySec=1800

# Persist timer across reboots
Persistent=true

[Install]
WantedBy=timers.target
